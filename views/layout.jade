doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/estilo.css')
    link(rel='stylesheet', href='/stylesheets/apprise.min.css')
    block head
  body
    header#header
      h1
        span
          img(src="images/logo.png", height="250px")
          //span Browser<br/>Adventure<br/>online
          
      //navbar
      div.navbar.pull-right(style="width: 80%;")
        div.navbar-inner
          ul.nav
            li#NAVindex
              a(href="index")
                .icon-home
                | &nbsp Indice
            li#NAVnotice
              a(href="notice")
                .icon-list-alt
                | &nbsp Noticias
            li#NAVforo
              a(href="foro")
                .icon-comment
                | &nbsp Foro
            li#NAVgame
              a(href="#", onclick="apprise('Logueate para empezar a jugar');")
                .icon-play
                | &nbsp Juego
          ul.nav.pull-right
            li.a
              a(data-toggle="modal", data-target="#modalSession") Entrar

    #modalSession.modal.fade.tab-content
      #log.tab-pane.active
        .modal-header
          h2 Inicio session
        form(style='margin: 0px;', action="login", method="POST").formAjax
            .modal-body
              .row-fluid
                .span4
                  h4 Usuario:
                  h4 Password:
                .span6
                  input(name='User', type='text', required='true')
                  input(name='Pass', type='password', required='true')
                  input(name='PassEncryp', type='hidden')
            .modal-footer
              button.btn.pull-left.btn-info(type='button', data-toggle="tab", data-target="#reg") Registrarse
              button.btn.btn-danger(type='button', data-dismiss='modal') Cancelar
              button.btn.btn-primary(type='submit') Iniciar session
      #reg.tab-pane
        .modal-header
            h2 Registro
        form(style='margin: 0px;', action="registro", method="POST").formAjax
            .modal-body
                .row-fluid
                  .span4
                    h4 Usuario:
                    h4 Password:
                    h4 E-Mail:
                  .span6
                    input(name='User', type='text', required='true', pattern=".{4,}")
                    input(name='Pass', type='password', required='true', pattern=".{5,}", title="5 characters minimum")
                    input(name='PassEncryp', type='hidden')
                    input(name='Mail', type='email', required='true')
            .modal-footer
                button.btn.pull-left.btn-info(type='button', data-toggle="tab", data-target="#log") Volver
                button.btn.btn-danger(type='button', data-dismiss='modal') Cancelar
                button.btn.btn-primary(type='submit') Registro
  
    #contenido
      block content
    
    footer
      p Todos los derechos reservados<br/>2012 - 2013

    script(src='javascripts/jquery.js')
    script(src='javascripts/bootstrap-min.js')
    script(src='javascripts/md5.js')
    script(src='javascripts/scriptsPagina.js')
    script(src='javascripts/apprise-1.5.min.js')
    
    block scripts